<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Octane"
            id="octane-eclipse-plugin">
      </category>
      <view
            name="MyWork"
            icon="icons/sample.gif"
            category="octane-eclipse-plugin"
            class="com.hpe.octane.ideplugins.eclipse.ui.MyWork"
            id="com.hpe.octane.ideplugins.eclipse.ui.MyWork">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.hpe.octane.ideplugins.eclipse.ui.MyWork">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
