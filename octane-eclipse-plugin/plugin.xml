<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Octane Eclipse Plugin"
            id="octane-eclipse-plugin">
      </category>
      <view
            allowMultiple="false"
            category="octane-eclipse-plugin"
            class="com.hpe.octane.ideplugins.eclipse.ui.MyWorkView"
            icon="icons/mywork.png"
            id="com.hpe.octane.ideplugins.eclipse.ui.MyWork"
            name="My Work">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="com.hpe.octane.ideplugins.eclipse.ui.MyWork"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.ProblemView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.hpe.octane.ideplugins.eclipse.ui.editor.EntityModelEditor"
            id="com.hpe.octane.ideplugins.eclipse.ui.EntityModelEditor"
            name="EntityModelEditor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="com.hpe.octane.ideplugins.eclipse.commands.CallEditor"
            id="octane-eclipse-plugin.openEntityEditor"
            name="Open Entity Editor">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            class="com.hpe.octane.ideplugins.eclipse.DefineCommands"
            locationURI="menu:org.eclipse.ui.main.menu">
      </menuContribution>
      <menuContribution
            allPopups="true"
            class="com.hpe.octane.ideplugins.eclipse.DefineCommands"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
      </menuContribution>
      <menuContribution
            allPopups="false"
            class="com.hpe.octane.ideplugins.eclipse.DefineCommands"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
      </menuContribution>
      <menuContribution
            allPopups="false"
            class="com.hpe.octane.ideplugins.eclipse.DefineCommands"
            locationURI="menu:org.eclipse.ui.main.menu">
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
      </menuContribution>
   </extension>

</plugin>
